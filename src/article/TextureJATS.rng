    </element>
  </define>

  <define name="caption">
    <element name="caption">
      <ref name="just-para.class"/>
    </element>
  </define>

  <define name="disp-quote-content">
    <element name="disp-quote-content">
      <ref name="just-para.class"/>
    </element>
